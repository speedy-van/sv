{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "package.json",
    "pnpm-workspace.yaml",
    "turbo.json",
    ".env",
    ".env.local",
    ".env.production",
    ".env.development",
    "tsconfig.json",
    ".eslintrc.js",
    ".prettierrc",
    "apps/web/next.config.mjs",
    "apps/web/tsconfig.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "JWT_SECRET",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "REDIS_URL"
  ],
  "remoteCache": {
    "signature": true
  },
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "cache": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "JWT_SECRET",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "REDIS_URL"
      ]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "cache": true,
      "persistent": false
    },
    "test:e2e": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "test-results/**",
        "playwright-report/**"
      ],
      "cache": true,
      "persistent": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "cache": true,
      "persistent": false
    },
    "lint:fix": {
      "outputs": [],
      "cache": false,
      "persistent": false
    },
    "clean": {
      "cache": false,
      "persistent": false
    },
    "prisma:generate": {
      "outputs": [
        "node_modules/.prisma/**"
      ],
      "cache": true,
      "persistent": false
    },
    "prisma:migrate": {
      "cache": false,
      "persistent": false
    },
    "prisma:push": {
      "cache": false,
      "persistent": false
    },
    "prisma:studio": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputs": [],
      "cache": false,
      "persistent": false
    },
    "format:check": {
      "outputs": [],
      "cache": true,
      "persistent": false
    }
  }
}
