{
  "expo": {
    "name": "Speedy Van Driver",
    "slug": "speedy-van-driver",
    "version": "2.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "speedyvandriver",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.speedyvan.driverapp",
      "buildNumber": "2.0.1",
      "usesAppleSignIn": false,
      "usesIcloudStorage": false,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby jobs and help customers track their delivery in real-time.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location even when the app is in the background to provide accurate delivery tracking to customers.",
        "NSLocationAlwaysUsageDescription": "We need your location in the background to track your delivery progress and provide real-time updates to customers.",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.speedyvan.driver",
      "versionCode": 3,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "We need your location even when the app is in the background to provide accurate delivery tracking to customers.",
          "locationAlwaysPermission": "We need your location in the background to track your delivery progress and provide real-time updates to customers.",
          "locationWhenInUsePermission": "We need your location to show nearby jobs and help customers track their delivery in real-time.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#3B82F6",
          "sounds": [
            "./assets/sounds/notification.mp3"
          ]
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "7fc30f9d-100c-4f78-8d9d-37052623ee11"
      },
      "EXPO_PUBLIC_API_BASE_URL": "https://speedy-van.co.uk",
      "EXPO_PUBLIC_PUSHER_KEY": "407cb06c423e6c032e9c",
      "EXPO_PUBLIC_PUSHER_CLUSTER": "eu"
    },
    "assetBundlePatterns": [
      "**/*"
    ]
  }
}

