# ======================================================
# Speedy Van Environment Variables Template
# ======================================================
# Copy this file to .env.local and fill in your values

# ------------------------
# Database
# ------------------------
DATABASE_URL=postgresql://username:password@localhost:5432/speedy_van

# ------------------------
# NextAuth (Authentication)
# ------------------------
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ------------------------
# JWT Secret
# ------------------------
JWT_SECRET=your-jwt-secret-here

# ------------------------
# Stripe Configuration
# ------------------------
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ------------------------
# Pusher (Real-time Communication)
# ------------------------
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=eu
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_CLUSTER=eu

# ------------------------
# Maps & Geocoding
# ------------------------
# Mapbox (Primary provider for all features)
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token_here

# Google Places API (Luxury booking only + fallback)
NEXT_PUBLIC_GOOGLE_MAPS=your_google_places_api_key_here

# ------------------------
# Trustpilot Widget
# ------------------------
NEXT_PUBLIC_TRUSTPILOT_BUSINESS_UNIT_ID=68b0fc8a6ad677c356e83f14

# ------------------------
# Email Services
# ------------------------
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
RESEND_API_KEY=re_your_resend_api_key_here
MAIL_FROM=noreply@speedy-van.co.uk

# ------------------------
# SMS Services (Voodoo SMS)
# ------------------------
VOODOO_SMS_API_KEY=your_voodoo_sms_api_key
DISABLE_SMS=false

# ------------------------
# Weather API
# ------------------------
NEXT_PUBLIC_WEATHER_API_KEY=your_weather_api_key

# ------------------------
# Application Configuration
# ------------------------
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ------------------------
# Public URLs
# ------------------------
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ------------------------
# Company Information
# ------------------------
NEXT_PUBLIC_COMPANY_NAME=Speedy Van
NEXT_PUBLIC_COMPANY_LEGAL_NAME=SPEEDY VAN REMOVALS LTD
NEXT_PUBLIC_COMPANY_NUMBER=SC865658
NEXT_PUBLIC_COMPANY_REGISTERED_IN=Scotland
NEXT_PUBLIC_COMPANY_ADDRESS=Office 2.18, 1 Barrack street, Hamilton ML3 0DG
NEXT_PUBLIC_COMPANY_PHONE=+44 1202129746
NEXT_PUBLIC_COMPANY_EMAIL=support@speedy-van.co.uk

# ------------------------
# Custom Configuration
# ------------------------
CUSTOM_KEY=your_custom_key_here

# ------------------------
# Google Services (Optional)
# ------------------------
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_SITE_VERIFICATION=your_google_site_verification

# ------------------------
# Consent Management (Optional)
# ------------------------
CONSENT_HMAC_SECRET=your_consent_hmac_secret

# ------------------------
# Mapbox Server Token (Optional)
# ------------------------
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
MAPBOX_SERVER_TOKEN=your_mapbox_server_token

# ------------------------
# Weather API (Alternative)
# ------------------------
WEATHER_API_KEY=your_weather_api_key

# ------------------------
# Groq AI API Keys (Namespaced for Service Isolation)
# ------------------------
# Admin Panel AI Assistant
GROQ_API_KEY_ADMIN=your_groq_api_key_admin

# Customer Chatbot
GROQ_API_KEY_CUSTOMER=your_groq_api_key_customer

# Driver App AI Assistant
GROQ_API_KEY_DRIVER=your_groq_api_key_driver

# Fallback (if service-specific keys are not set)
GROQ_API_KEY=your_groq_api_key_fallback